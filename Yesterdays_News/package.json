{
  "name": "yesterdaysnews",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:performance": "node scripts/performance-test.js",
    "build:release": "cd android && ./gradlew assembleRelease"
  },
  "dependencies": {
    "@expo-google-fonts/lato": "^0.4.0",
    "@expo-google-fonts/playfair-display": "^0.4.1",
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.1.0",
    "adb": "^0.2.0",
    "axios": "^1.11.0",
    "expo": "~53.0.22",
    "expo-constants": "^17.1.7",
    "expo-font": "^13.3.2",
    "expo-linear-gradient": "~14.1.5",
    "expo-localization": "~16.1.6",
    "expo-location": "~18.1.6",
    "i18next": "^25.4.1",
    "moment": "^2.30.1",
    "react": "19.0.0",
    "react-i18next": "^15.0.2",
    "react-native": "0.79.5",
    "react-native-safe-area-context": "^5.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@testing-library/react-native": "14.0.0-alpha.1",
    "@types/react": "~19.0.10",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-preset-expo": "^13.0.0",
    "imagemin-cli": "^8.0.0",
    "imagemin-optipng": "^8.0.0",
    "jest": "~29.7.0",
    "typescript": "~5.8.3",
    "universal-test-renderer": "0.6.0"
  },
  "private": true,
  "jest": {
    "preset": "react-native",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/node_modules/react-native/jest/setup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(axios|moment|expo|expo-localization|expo-constants|expo-font|@expo|react-native|@react-native|react-native-vector-icons|expo-linear-gradient)/)"
    ]
  }
}
