{
  "name": "yesterdays-news-mobile-tests",
  "version": "1.0.0",
  "description": "Mobile testing suite for Yesterday's News React Native app",
  "main": "index.js",
  "scripts": {
    "test:ios": "detox test --configuration ios.sim.debug",
    "test:android": "detox test --configuration android.emu.debug",
    "test:android-attached": "detox test --configuration android.attached",
    "build:ios": "detox build --configuration ios.sim.debug",
    "build:android": "detox build --configuration android.emu.debug",
    "e2e": "detox test --configuration ios.sim.debug --configuration android.emu.debug",
    "clean": "detox clean-framework-cache && detox clean-build-cache"
  },
  "dependencies": {
    "detox": "^20.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0"
  }
}
